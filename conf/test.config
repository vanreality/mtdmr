/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/mtdmr -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    executor = 'slurm'

    withName: 'GUNZIP' {
        container = '$baseDir/images/methyldackel.sif'
        cpus = 32
        memory = '64GB'
        time = '1h'
        queue = 'cn-long'
    }

    withName: 'SAMTOOLS_FAIDX' {
        container = '$baseDir/images/methyldackel.sif'
        cpus = 32
        memory = '64GB'
        time = '1h'
        queue = 'cn-long'
    }

    withName: 'SAMTOOLS_INDEX' {
        container = '$baseDir/images/methyldackel.sif'
        cpus = 32
        memory = '64GB'
        time = '1h'
        queue = 'cn-long'
    }

    withName: 'METHYLDACKEL_EXTRACT' {
        container = '$baseDir/images/methyldackel.sif'
        cpus = 32
        memory = '64GB'
        time = '12h'
        queue = 'cn-long'
    }
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Input data
    // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
    // TODO nf-core: Give any required params for the test so that command line flags are not needed
    input = params.pipelines_testdata_base_path + 'test_samplesheet.csv'
    reference = params.pipelines_testdata_base_path + 'reference.fa'
    outdir = params.pipelines_testdata_base_path
}

profiles {
    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
    }
}

plugins {
    id 'nf-schema' version '2.2.1' {
        artifact = "file://${baseDir}/.nextflow/plugins/nf-schema-2.2.1.zip"
    }
}